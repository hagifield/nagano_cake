<p>Find me in app/views/public/customers/edit.html.erb</p>

<h2>会員情報編集</h2>

<%= form_with model: @customer, local: true, method: :patch do |f| %>
  <table>
    <tr>
      <th>氏名</th>
      <td><%= f.text_field :last_name, value: @customer.last_name, autofocus: true %></td>
      <td><%= f.text_field :first_name, value: @customer.first_name %></td>
    </tr>
    
    <tr>
      <th>フリガナ</th>
      <td><%= f.text_field :last_name_kana, value: @customer.last_name_kana %></td>
      <td><%= f.text_field :first_name_kana, value: @customer.first_name_kana %></td>
    </tr>
    
    <tr>
      <th>郵便番号</th>
      <td><%= f.text_field :postal_code, value: @customer.postal_code %></td>
    </tr>
    
    <tr>
      <th>住所</th>
      <td><%= f.text_field :address, value: @customer.address %></td>
    </tr>
    
    <tr>
      <th>電話番号</th>
      <td><%= f.text_field :telephone_number, value: @customer.telephone_number %></td>
    </tr>
    
    <tr>
      <th>メールアドレス</th>
      <td><%= f.email_field :email, value: @customer.email %></td>
    </tr>
    
    <tr>
      <td rowspan></td>
      <td><%= f.submit "編集内容を保存" %></td>
      <td><%= link_to "退会する", customers_confirm_path %></td>
    </tr>
  </table>
<% end %>