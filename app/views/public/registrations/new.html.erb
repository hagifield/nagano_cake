<%= flash[:notice] %>

<h2>新規会員登録</h2>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  
  <div class="field"><!-- 性 -->
    <%= f.label :last_name %></br>
    <span>（性）</span>
    <%= f.text_field :last_name, placeholder: "令和", autofocus: true  %>
  </div>
  
  <div class="field"><!-- 名 -->
    <%= f.label :first_name %></br>
    <span>（名）</span>
    <%= f.text_field :first_name, placeholder: "道子" %>
  </div>
  
  <div class="field"><!-- セイ -->
    <%= f.label :last_name_kana %></br>
    <span>（セイ）</span>
    <%= f.text_field :last_name_kana, placeholder: "レイワ" %>
  </div>
  
  <div class="field"><!-- メイ -->
    <%= f.label :first_name_kana %></br>
    <span>（メイ）</span>
    <%= f.text_field :first_name_kana, placeholder: "ミチコ" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, placeholder: "sample@example.com" %>
  </div>
  
  <div class="field"><!-- 郵便番号 -->
    <%= f.label :postal_code %></br>
    <%= f.text_field :postal_code, placeholder: "0000000" %>
  </div>
  
  <div class="field"><!-- 住所 -->
    <%= f.label :address %></br>
    <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" %>
  </div>
  
  <div class="field"><!-- 電話番号 -->
    <%= f.label :telephone_number %></br>
    <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
