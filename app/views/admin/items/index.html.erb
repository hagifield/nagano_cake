<h1>Admin::Items#index</h1>
<p>Find me in app/views/admin/items/index.html.erb</p>

<h2>商品一覧</h2>

<h2>
  <%= link_to new_admin_item_path do %>
    ＋商品追加＋
  <% end %>
</h2>

<% @items.each do |item| %>

  <table>
    
    <thead>
      <tr>
        <td>商品ID</td>
        <td>商品名</td>
        <td>税抜価格</td>
        <td>ジャンル</td>
        <td>販売ステータス</td>
      </tr>
    </thead>
    
    <tbody>
      <tr>
        <td><%= item.id %></td>
        <td>
          <%= link_to admin_item_path(item.id) do %>
            <%= item.name %>
          <% end %>
        </td>
        <td><%= item.price %></td>
        <td><%= item.genre.name %></td>
        <td>
          <% if item.is_active %>
            販売中
          <% elsif %>
            販売停止中
          <% end %>
        </td>
      </tr>
    </tbody>
    
  </table>
  
<% end %>